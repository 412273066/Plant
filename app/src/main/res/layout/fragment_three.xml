<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/img_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="卡乐思"
                    android:textColor="@color/color_black_normal_text"
                    android:textSize="@dimen/text_title_small"
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/text_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="普通用户"
                    android:textColor="@color/color_black_normal_text"
                    android:textSize="@dimen/text_title_small"
                    android:visibility="gone" />


                <Button
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_list_item"
                    android:text="立即登录"

                    android:textColor="@color/color_black_normal_text"
                    android:id="@+id/btn_login" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineHorizontalStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View style="@style/LineHorizontalStyle" />

            <RelativeLayout
                android:id="@+id/relative_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_colloection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_collection" />

                <TextView
                    android:id="@+id/label_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/img_colloection"
                    android:text="我的收藏"
                    android:textColor="@color/color_black_secondary_text"
                    android:textSize="@dimen/text_title_small" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_front_gray" />

            </RelativeLayout>

            <View style="@style/LineHorizontalStyle" />

            <RelativeLayout
                android:id="@+id/relative_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_feedback"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_feedback" />

                <TextView
                    android:id="@+id/label_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/img_feedback"
                    android:text="意见反馈"
                    android:textColor="@color/color_black_secondary_text"
                    android:textSize="@dimen/text_title_small" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_front_gray" />

            </RelativeLayout>

            <View style="@style/LineHorizontalStyle" />

            <RelativeLayout
                android:id="@+id/relative_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_share" />

                <TextView
                    android:id="@+id/label_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/img_share"
                    android:text="分享应用"
                    android:textColor="@color/color_black_secondary_text"
                    android:textSize="@dimen/text_title_small" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_front_gray" />

            </RelativeLayout>

            <View style="@style/LineHorizontalStyle" />

            <RelativeLayout
                android:id="@+id/relative_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_setting" />

                <TextView
                    android:id="@+id/label_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/img_setting"
                    android:text="通用设置"
                    android:textColor="@color/color_black_secondary_text"
                    android:textSize="@dimen/text_title_small" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_front_gray" />

            </RelativeLayout>

            <View style="@style/LineHorizontalStyle" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>