<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="3dp"
    card_view:contentPaddingBottom="0dp"
    card_view:contentPaddingLeft="0dp"
    card_view:contentPaddingRight="0dp"
    card_view:contentPaddingTop="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:src="@drawable/molihua"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/text_plant_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:text="茉莉花"
            android:gravity="center"
            android:textColor="@color/color_black_normal_text"
            android:textSize="@dimen/text_button" />

        <TextView
            android:id="@+id/text_plant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/text_plant_name"
            android:text="木樨科馨属"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/color_black_secondary_text"
            android:textSize="@dimen/text_hint" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>
