<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_background"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="植物茎部粗细的决定因素！"
        android:textColor="@color/color_black_normal_text"
        android:textSize="@dimen/text_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="植物趣闻"
            android:textSize="@dimen/text_hint" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="2015年12月25日"
            android:textColor="@color/color_black_secondary_text"
            android:textSize="@dimen/text_hint" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_default_not_found" />

        <TextView
            android:id="@+id/text_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/imageView"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="5dp"
            android:text="放眼我们周围的世界，看看挺拔而直指天穹的秀丽白杨、婀娜多姿的垂柳、迎着微风频频低头的小草，让人有一种直抒胸臆的温柔感。大树之所以挺拔，小草之所以迎风不倒，是因为它们都有坚强的脊梁——茎。"
            android:textColor="@color/color_black_secondary_text"
            android:textSize="@dimen/text_button" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_black_dividers" />
</LinearLayout>

