<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_list_item"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_share_pic"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="晒图"
            android:textSize="@dimen/text_button" />

        <TextView
            android:id="@+id/text_identify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_list_item"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_identify"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="识花"
            android:textSize="@dimen/text_button" />

        <TextView
            android:id="@+id/text_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_list_item"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_shop"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="商家"
            android:textSize="@dimen/text_button" />


    </LinearLayout>


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:text="植物分类"
        android:textColor="@color/color_main"
        android:textSize="@dimen/text_title_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/color_black_dividers" />

</LinearLayout>
